@inherits LayoutComponentBase

<ErrorBoundary>
    <ChildContent>
        @Body
    </ChildContent>
    <ErrorContent>
        @{
            Console.WriteLine(context.ToString());
            Window.MainWindow.Instance.ShowErrorMessageAsync(context).Wait();
        }
    </ErrorContent>
</ErrorBoundary>

<RadzenComponents @rendermode="InteractiveServer" />
